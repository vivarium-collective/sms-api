apiVersion: v1
kind: PersistentVolume
metadata:
  name: fsx-pcs-root-pv
spec:
  capacity:
    storage: 100Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: fsx-sc-static
  csi:
    driver: fsx.csi.aws.com
    volumeHandle: ${FSX_ID}
    volumeAttributes:
      # Use IP address instead of DNS name - Lustre client requires IP for NID
      dnsname: ${FSX_IP}
      mountname: ${FSX_MOUNT}
